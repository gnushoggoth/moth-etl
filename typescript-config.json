{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "types": ["node"],
    "paths": {
      "@modules/*": ["./src/typescript/modules/*"]
    }
  },
  "include": ["src/typescript/**/*.ts", "src/typescript/**/*.tsx"],
  "exclude": ["node_modules", "dist"]
}
